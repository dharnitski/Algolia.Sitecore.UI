@model SearchScriptModel


@if (!Sitecore.Context.PageMode.IsPageEditorEditing)
{
    //todo: implement AMD
    <script src="//cdn.jsdelivr.net/jquery/1.11.3/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/instantsearch.js/1/instantsearch.min.js"></script>
    <script>
    var search = instantsearch({
        @Model.ApplicationId
        @Model.ApplicationKey
        @Model.IndexName
        @Model.UrlSync
    });
    </script>
}
else
{
    <fieldset>
        <div class="form-group">
            <label>Application Id:</label>
            @Html.Sitecore().Field("Application Id")
        </div>
        <div class="form-group">
            <label>Application Read Only Key:</label>
            @Html.Sitecore().Field("Application Read Only Key")
        </div>
        <div class="form-group">
            <label>Index Name:</label>
            @Html.Sitecore().Field("Index Name")
        </div>
    </fieldset>
    <fieldset>
        <label>If not empty conguration loaded from Setting with pattern Algolia.ConfigName.XXX</label>
        <div class="form-group">
            <label>Config Name:</label>
            @Html.Sitecore().Field("Config Name")
        </div>
    </fieldset>
    <div class="form-group">
        <label>Sync Url:</label>
        @Html.Sitecore().Field("Sync Url", new { Display = "Checkbox" })
    </div>
}



