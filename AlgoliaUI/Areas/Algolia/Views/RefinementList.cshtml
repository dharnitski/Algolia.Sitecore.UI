@model AlgoliaUI.Code.Models.RefinementListModel

@if (!Sitecore.Context.PageMode.IsPageEditorEditing)
{
    <div id="refinement-list-@Model.Rendering.UniqueId" class="facet"></div>
    <script>
        search.addWidget(
            instantsearch.widgets.refinementList({
                container: '#refinement-list-@Model.Rendering.UniqueId',
                attributeName: '@Html.Sitecore().Field("Attribute Name")',
                operator: '@Model.Operator',
                @Model.Limit
                templates: {
                    @Model.HeaderTemplate
                    @Model.ItemTemplate
                },
                cssClasses: {
                    @Model.Item.NameValuesToCssClasses("Css Classes")
                }
            })
        );
    </script>
}
else
{
    <div class="form-group">
        <label>Attribute Name:</label>
        @Html.Sitecore().Field("Attribute Name")
    </div>
    <div class="form-group">
        <label>Limit:</label>
        @Html.Sitecore().Field("Limit")
    </div>
}



